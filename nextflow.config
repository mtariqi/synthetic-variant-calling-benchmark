profiles {

    slurm {

        process.executor = 'slurm'
        process.queue = 'courses'
        process.memory = '32 GB'
        process.cpus = 8
        process.time = '12h'

        singularity.enabled = true
        singularity.autoMounts = true
        singularity.cacheDir = "$HOME/.singularity"

        // Path to SIF container used on Explorer HPC
        process.container = "/home/islam.mdtar/containers/bioinfo.sif"

        executor {
            name = 'slurm'
            submitRateLimit = '5 sec'
        }

        workDir = 'work'
        trace = true
        timeline = true
        report = true

        env {
            NXF_OPTS = '-Xms1g -Xmx4g'
        }
    }

    local {
        process.executor = 'local'
        singularity.enabled = false
    }
}
